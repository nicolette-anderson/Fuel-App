@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">
    <div class="text-left col-xs-12 row mb-1">
        <div class="input-group-text col-md-6 col-xs-12 px-2 align-self-md-center">
            <label for="startCity" class="col-form-label-lg col-md-6 px-2">Enter starting city </label>
            <input id="startCity" type="text" class="form-text col-md-6" />
        </div>
        <div class="input-group-text col-md-6 col-xs-12 px-2 align-self-md-center">
            <label for="endCity" class="col-form-label-lg col-md-6 px-2">Enter destination city </label>
            <input id="endCity" type="text" class="form-text col-md-6"/>
        </div>
    </div>
    <div class="row mt-3">
        <div class="mt-3 align-self-md-center input-group offset-md-5">
            <button id="submitButton" class="btn-lg" onclick="calculateCosts()">Get fuel price</button>
        </div>
        <div class="col-xs-12 mt-3 align-self-md-center input-group offset-md-5">
            <label id="resultLabel" class="col-form-label-lg"></label>
        </div>
    </div>
</div>
